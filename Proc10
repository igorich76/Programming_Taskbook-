## // с решётками и без begin-end
uses PT4;
procedure Swap(var x,y: real);
begin
  var dop := 0.0;
  dop := x;
  x := y;
  y := dop; 
end;

 Task('Proc10');
 var (a, b, c, d) := ReadlnReal4;
 Swap(a,b);
 Swap(c,d);
 Swap(b,c);
 Print(a); Print(b); Print(c); Print(d);


// за часок сварганил прогу... Так держать!
// кстати, новая запись программы!
